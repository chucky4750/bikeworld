  <!-- Highlight section -->
<section id="highlight" style="background-image: url(/images/bg.png);">
    <br>
      <h2 class="text-white">Highlights in der CineWorld Mannheim</h2>
      <!-- carousel-->
      <div id="highlightSlide" role="listbox" class="carousel slide carousel-fade d-block w-50 mx-auto" data-ride="carousel">
          <ol class="carousel-indicators">
        <% var i=0;%>
        <% data.forEach(function(item){%>
            <%if (i==0){%>
        <li data-target="#myCarousel" data-slide-to="<%=i%>" class="active"></li>
        <%}else{%>
        <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
        <%}%>

    <%i++;})%>
</ol>
<div class="carousel-inner">
            <% var j=0;%>
            <% data.forEach(function(item){%> 
                <%if (j==0){%> 
                    <div class="carousel-item active">
                <%}else{%>
                    <div class="carousel-item">
              <%}%>
              <a href="/product/?name=<%= item.name%>"><img src="<%=item.bildpfad%>" class="d-block w-100 p-3 mx-auto" alt="..."></a>
        </div> <!--Item close-->
        <%j++;})%></div> <!-- inner close-->
    

          <a class="left carousel-control-prev mx-auto" href="#highlightSlide" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control-next mx-auto" href="#highlightSlide" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
      </div>
  
  </section>