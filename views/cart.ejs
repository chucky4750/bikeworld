<% if (loggedin) { %>
    <%- include("partials/secondaryHeader") %> <% } else { %> <%- include("partials/header") %> <% } %>

<%- include("partials/goToTop") %>
    <div class="row" style="margin-top: 25px;">
        <div class="mx-auto" id="test">
            <ul class="list-group">
                <% data.forEach(function(item){ %>
                <li class="list-group-item">
                <span class="badge"><%= item.anzahl%></span> <!-- Aus Query als Count nehmen-->
                <strong><%= item.name%></strong><br>
                <strong>Von <%= item.vonDay%>/<%= item.vonMonth%>/<%= item.vonYear%> bis <%= item.bisDay%>/<%= item.bisMonth%>/<%= item.bisYear%>     <%=item.DateDiff%></strong> <!-- Aus Query nehmen-->
                <span class="label label-success"><%= item.preis%>â‚¬</span> 
                <div class="btn-group">
                    <a href="/reduce/?pid=<%=item.pid%>"><button class="btn btn-warning btn-xs" type="button" >Entferne Buchung</button></a>
                </div>
                </li>
                    <% } ); %>
            </ul>
            </br>

        </div>
    </div>

    <div class="row">
        <div class="mx-auto">
            <strong></strong>
        </div>
    </div>

    <hr>
    <% if (data.length > 0) { %>
    <div class="row" style="float: right; margin-right: 2.5%;">
        <form method="POST" action="/payment">
            <input type="submit" value="Mit PayPal Bezahlen" name="bsubmit" class="checkout"
                   style="color:black"><!-- ohne Produkte im Warenkorb kein Einkauf -->
        </form>
    </div>
    <%}%>

<%-include("partials/footer") %>